<div id="<%= dom_id restaurant %>">
  <p>
    <strong>Name:</strong>
    <%= restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= restaurant.address %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= restaurant.rating %>
  </p>

  <%= link_to 'See chef', chef_restaurant_path(restaurant) %>
  <%= link_to 'Add review', new_restaurant_review_path(restaurant) %>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %>
        <%= link_to 'delete',
        review_path(review),
        data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
        class: 'btn btn-sm btn-danger' %>
      </li>
    <% end %>
  </ul>
  <br>
</div>
